<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>CreatePlayerServlet</servlet-name>
        <servlet-class>za.ac.tut.web.CreatePlayerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListPlayerServlet</servlet-name>
        <servlet-class>za.ac.tut.web.ListPlayerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemovePlayerServlet</servlet-name>
        <servlet-class>za.ac.tut.web.RemovePlayerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchPlayerServlet</servlet-name>
        <servlet-class>za.ac.tut.web.SearchPlayerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdatePlayerServlet</servlet-name>
        <servlet-class>za.ac.tut.web.UpdatePlayerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreatePlayerServlet</servlet-name>
        <url-pattern>/CreatePlayerServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListPlayerServlet</servlet-name>
        <url-pattern>/ListPlayerServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemovePlayerServlet</servlet-name>
        <url-pattern>/RemovePlayerServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchPlayerServlet</servlet-name>
        <url-pattern>/SearchPlayerServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdatePlayerServlet</servlet-name>
        <url-pattern>/UpdatePlayerServlet.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
